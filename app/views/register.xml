<Alloy>
	<Window id="register">
		<View id="indexContainer">
			<View id="header">
				<Button id="logo"></Button>
				<Label id="create"></Label> 
				<!--Label id="reg_btn"></Label-->
			</View>
			<View id="body">
				<ScrollView  id="scrollView" showVerticalScrollIndicator="true" showHorizontalScrollIndicator="true" layout = "vertical">
				<TextField class="input" id="email"></TextField>
				<TextField class="input" id="password"></TextField>
				<!--TextField class="input" id="pass_confirm"></TextField-->
				<TextField class="input" id="first_name"></TextField>
				<TextField class="input" id="last_name"></TextField>
				<TextField class="input" id="phone"></TextField>
				<Label id="genderl"></Label> 
                  <Picker class="input" id="gender" selectionIndicator="true" useSpinner="false">
                        <PickerColumn id="column1" width="30%">
                            <PickerRow color = "#0099ff" title="" />                        	
                            <PickerRow color = "#0099ff" title="Masculine" />
                            <PickerRow color = "#0099ff" title="Feminine" />

                        </PickerColumn>
                    </Picker>
                    				<Label id="countryl"></Label> 
				<Picker class="input" id="country" selectionIndicator="true" useSpinner="false">
					<PickerColumn id="column1" width="30%">		
					</PickerColumn>
				</Picker>
								<Label id="birthl"></Label> 
				<Picker id="birthday" class="input" type="Ti.UI.PICKER_TYPE_DATE">   
       			</Picker> 
				<!--TextField class="input" id="note"></TextField-->
				<View id="agreeContainer"> 
				<Label id="agree"></Label> 
				</View>
				<View id="linkContainer"> 
				<Label id="terms"></Label>
				<Label id="privacy"></Label>
				<Switch id="loginSwitch"></Switch>
				</View>
				<Button id="sign_up" onClick="register_user"></Button>
				<View id="linkContainer"> 
				</View>
			  </ScrollView>
			</View>
		</View>
	</Window>
</Alloy>