<Alloy>
	<Window id="specieDetailWin" title="Specie Details">
		<View id="header">
			<View id="image"></View>
		</View>
		<View id="body">
		</View>
		<View id="body2">
			<Picker id="picker" selectionIndicator="true" useSpinner="false">
				<PickerColumn id="Abundance">
					<PickerRow title="Low (1)"/>
					<PickerRow title="Medium (2-3)"/>
					<PickerRow title="High (4-5)"/>
					<PickerRow title="Very High (>5)"/> 
					</PickerColumn>
			</Picker>
		<Button id="moreBtn" onClick="openMore"></Button>
		<Button id="endBtn" onClick="openMain"></Button>
		</View>
	</Window>
</Alloy>