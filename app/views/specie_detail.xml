<Alloy>
	<Window id="specieDetailWin" title="Specie Details">
		<View class="container">
			<Label></Label>
			<View id="image"></View>
			<Picker id="picker" selectionIndicator="true" useSpinner="false">
				<PickerColumn id="Abundance">
					<PickerRow title="Low (1)"/>
					<PickerRow title="Medium (2-3)"/>
					<PickerRow title="High (4-5)"/>
					<PickerRow title="Very High (>5)"/> 
					</PickerColumn>
			</Picker>
		<Button id="moreBtn" onClick="openMore" title="Add more species"
			right="5%" bottom="20%" width="auto" height="50"></Button>
		<Button id="endBtn" onClick="openMain" title="End survey"
			right="5%" bottom="15%" width="auto" height="50"></Button>
		</View>
	</Window>
</Alloy>